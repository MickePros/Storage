@model IEnumerable<Storage.Models.ProductViewModel>

@{
    ViewData["Title"] = "Value";
}

<h1>Value</h1>

<p>
    <a asp-action="Create">Create New</a>
    <form asp-action="filter">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="filter" placeholder="filter on category" />
            <button class="btn btn-outline-secondary" type="submit">Filter</button>
        </div>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryValue)
            </td>
        </tr>
}
    </tbody>
</table>
